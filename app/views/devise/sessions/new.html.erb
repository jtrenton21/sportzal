<div style="padding-top:80px; padding-bottom:220px;" id="headerwrap">
   <div id="rcbg" class="row centered">
		<div class="col-lg-3"></div>
		<div class="col-lg-6 ">
			<h2>Sign In</h2>

			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		   		<div class="field">
		          <%= f.label :email %><br />
		          <%= f.text_field :email, :required => false, :autofocus => true %>
		        </div><br/>
		      	<div class="field">
		          <%= f.label :password %><br />
		          <%= f.password_field :password, :required => false %>
		        </div><br/> 
		    	<div class="field"> 
		    	<%= f.label :remember_me %><br />
		    	<%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		 		</div><br/>
			  <div class="form-actions">
			    <%= f.button :submit, "Sign in" %>
			  </div>
			<% end %>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
