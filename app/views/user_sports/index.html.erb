<div class="contents"> 
  <div class="container">
    <div style="margin-top:40px;" id="dg"> 
      <div class="row centered">
        <p style="margin-bottom:-1px;">Click ADD NEW to add a new sport,<br/> and your availability to play it.</p><br/>
        <%= link_to 'ADD NEW', new_user_sport_path %>     
        <div class="container w">
          <div class="row centered">
            <div class="col-lg-12">
              <h3>ALL USERS</h3><br/>
                <%= render 'allsports' %>
            </div>
          </div>
        </div>
        <div class="container w">
          <div class="row centered">
            <div class="col-lg-12">
              <h3>CURRENT USER</h3><br/>
                <%= render 'mysports' %>
            </div>
          </div>
        </div>
        <div class="container w">
          <div class="row centered">
            <div class="col-lg-12">
              <h3>NOT CURRENT USER</h3><br/>
                <%= render 'thsports' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>